{
  "name": "vs-inline-imports",
  "publisher": "bd-code",
  "displayName": "Inline Imports for Typescript/Javascript",
  "description": "Visualize inline import references for TypeScript and JavaScript files.",
  "repository": {
    "type": "git",
    "url": "https://github.com/rand0mC0d3r/vscode-inline-imports"
  },
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.{ts,tsx,js,jsx}"
  ],
  "icon": "icon.png",
  "license": "MIT",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-inline-imports.reIndex",
        "title": "Inline-Imports: Reindex codebase"
      },
      {
        "command": "vs-inline-imports.showActions",
        "title": "Inline-Imports: Show Actions"
      }
    ],
    "configuration": {
      "title": "Inline-Imports Configuration",
      "properties": {
        "inlineImports.batchSize": {
          "type": "number",
          "default": 25,
          "description": "Number of files to process per batch.",
          "scope": "resource"
        },
        "inlineImports.sourceFolder": {
          "type": "string",
          "default": "src",
          "description": "Source folder to scan for imports.",
          "scope": "resource"
        },
        "inlineImports.deleteIcon": {
          "type": "string",
          "default": "üóëÔ∏è",
          "description": "Icon to use for files proposed for deletion.",
          "scope": "resource"
        },
        "inlineImports.fileExtensions": {
          "type": "array",
          "default": [".ts", ".tsx", ".js", ".jsx"],
          "description": "File extensions to include in the import scanning. Default: .ts, .tsx, .js, .jsx",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "npm run compile && vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
